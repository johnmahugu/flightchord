!!! 5
%html
  %head
    %title Flightchord
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/

    %link{:rel => 'stylesheet', 'href' => '//cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/css/uikit.min.css'}/
    = csrf_meta_tags
  %body
    .uk-offcanvas-content
      = render 'shared/header'
      = render 'shared/dashboard'
      = render 'shared/flash', flash: flash
      .uk-flex-top{'uk-grid' => true}
        = yield

    %script{:src => '//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'}
    %script{:src => '//cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/js/uikit.min.js'}
    %script{:src => '//cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/js/uikit-icons.min.js'}
    = javascript_include_tag :application
    -#= javascript_include_tag params[:controller]
