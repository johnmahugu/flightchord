.uk-width-1-1
  .uk-cover-container(style='height:500px')
    %iframe{:src => 'http://flightradar24.com/simple', :width => '560', :height => '315', :frameborder => '0', 'uk-cover' => true}

  %h1 Listing flights

  %table
    %thead
      %tr
        %th
        %th
        %th

    %tbody
      - @flights.each do |flight|
        %tr
          %td= link_to 'Show', flight
          %td= link_to 'Edit', edit_flight_path(flight)
          %td= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' }

  = link_to 'New Flight', new_flight_path
